extends ../includes/layout

block main-content
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
    a.navbar-brand(href="/") MultiVision
      h6.text-muted - Extreme Tech Training
    button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav")
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item.active
          a.nav-link(href="/") Home
      div(ng-include="'/partials/account/navbar-login'")
  main.flex-shrink-0
    div.container(ng-view)

  footer.footer.mt-auto.py-3.bg-dark
    .container
      span.text-muted &copy; 2020 MultiVision Corp International Ltd.
